@model List<Fandom>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Fandoms</h3>

<p class="text-center">
    <a class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
</p>


    @for (var i = 0; i < Model.Count(); i++)
    {
        <div class="row">
          
                <div class="col-sm-12">
                    <div class="card border-secondary">
                        <h5 class="card-header">
                            <a asp-controller="Fandoms" asp-action="ShowFandomFanfics" asp-route-fandomName="@Model[i].FandomName"
                               class="card-title">@Model[i].FandomName</a>
                        </h5>
                        <div class="card-body">
                            <p class="card-text">@Model[i].ShortDescription</p>
                        </div>
                    </div>
                </div>
            
        </div>
        <br />
    }
