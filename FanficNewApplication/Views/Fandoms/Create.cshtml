@model FanficNewApplication.Models.Fandom

@{
    ViewData["Title"] = "Create";
}

<h3>Create fandom</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FandomName" class="control-label"></label>
                <input asp-for="FandomName" class="form-control" />
                <span asp-validation-for="FandomName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea class="form-control" asp-for="ShortDescription" rows="3"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
