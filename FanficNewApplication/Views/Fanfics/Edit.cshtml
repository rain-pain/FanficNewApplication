@model FanficNewApplication.Models.Fanfic

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit fanfic</h3>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FanficId" />
            <div class="form-group">
                <label asp-for="FanficName" class="control-label"></label>
                <input asp-for="FanficName" class="form-control" />
                <span asp-validation-for="FanficName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea class="form-control" asp-for="ShortDescription" rows="3"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fandom" class="control-label"></label>
                <select asp-for="FandomId" class="form-control" asp-items="ViewBag.FandomId"></select>
                <span asp-validation-for="FandomId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AuthorId" class="form-control" value="@User.Identity.Name" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
