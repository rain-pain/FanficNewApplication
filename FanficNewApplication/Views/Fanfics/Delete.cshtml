@model FanficNewApplication.Models.Fanfic

@{
    ViewData["Title"] = "Delete";
}

<h3>Delete</h3>
<br />
<h5>Are you sure you want to delete this fanfic?</h5>
<div>

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FanficName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FanficName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FanficId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-controller="Fanfics" asp-action="UserFanfics" asp-route-userName="@User.Identity.Name">Back to List</a>
    </form>
</div>
